<div class="relative mb-8 rounded-lg overflow-hidden shadow-md">
  <div class="bg-[#222] h-32 md:h-80 flex items-end bg-cover bg-center" style="<%= club.banner_url.present? ? "background-image: url('#{club.banner_url}')" : '' %>">
    <div class="absolute inset-0 bg-black opacity-60"></div>
    <div class="relative px-6 py-5 z-10">
      <h1 class="text-2xl md:text-3xl font-bold text-white mb-2"><%= club.name %></h1>
      <p class="text-white text-sm md:text-base opacity-90"><%= club.description %></p>
    </div>
  </div>
  <div class="absolute bottom-4 right-4 flex space-x-2">
    <% if admin %>
      <button onclick="window.location.href='<%= edit_club_path(club) %>'" class="bg-[#8B2635] hover:bg-[#731F2D] text-white font-medium py-1 px-3 rounded-md inline-flex items-center transition duration-200 text-sm shadow-sm cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
        </svg>
        Editar
      </button>
    <% end %>
    <%= link_to clubs_path, class: "bg-white hover:bg-gray-100 text-gray-700 font-medium py-1 px-3 rounded-md inline-flex items-center transition duration-200 text-sm shadow-sm" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
      </svg>
      Voltar
    <% end %>
  </div>
</div> 