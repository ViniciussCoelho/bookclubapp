<div class="bg-white rounded-lg shadow-md overflow-hidden" data-controller="chat" data-chat-club-id-value="<%= club.id %>">
  <div class="bg-[#F9EDEF] px-6 py-4 border-b">
    <h2 class="text-xl font-semibold text-[#8B2635]">Chat do Clube</h2>
  </div>
  <div class="p-4 h-96 overflow-y-auto" id="messages">
    <%= render partial: "clubs/messages", locals: { messages: messages, current_user: current_user } %>
  </div>
  <div class="border-t p-4">
    <form data-action="submit->chat#send" data-turbo="false" class="flex">
      <input type="text" 
             placeholder="Mensagem..." 
             data-chat-target="input" 
             class="flex-grow px-4 py-2 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-[#8B2635]" />
      <button type="submit" class="bg-[#8B2635] hover:bg-[#731F2D] text-white font-medium px-6 py-2 rounded-r-md transition duration-200">Enviar</button>
    </form>
  </div>
</div> 