<div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
  <div class="border-b border-gray-100 px-4 py-3 bg-gray-50 flex justify-between items-center">
    <h2 class="text-lg font-semibold text-gray-800">Livro Atual</h2>
    <% if admin %>
      <div class="flex space-x-2">
        <%= link_to "Nova Leitura", new_club_reading_path(club), 
            class: "text-xs bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded transition duration-200" %>
        <button class="text-xs bg-[#8B2635] hover:bg-[#731F2D] text-white px-3 py-1 rounded transition duration-200">
          Atualizar Progresso
        </button>
      </div>
    <% end %>
  </div>
  <div class="p-4">
    <% if club.current_reading %>
      <%= render "clubs/current_book_details", reading: club.current_reading, club: club, admin: admin %>
    <% else %>
      <%= render "clubs/no_current_book", club: club, admin: admin %>
    <% end %>
  </div>
</div> 