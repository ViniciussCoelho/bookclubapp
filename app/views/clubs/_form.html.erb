<%= form_with(model: club, class: "space-y-6") do |form| %>
  <% if club.errors.any? %>
    <div class="bg-[#F9EDEF] border-l-4 border-[#8B2635] text-[#8B2635] p-4 mb-4" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(club.errors.count, "erro") %> impediram este clube de ser salvo:</h2>
      <ul class="list-disc pl-5">
        <% club.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome do Clube", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#8B2635] focus:border-[#8B2635]" %>
  </div>

  <div>
    <%= form.label :description, "Descrição", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#8B2635] focus:border-[#8B2635]" %>
  </div>

  <div class="flex justify-end">
    <%= link_to "Cancelar", club.persisted? ? club_path(club) : clubs_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-md mr-2 transition duration-200" %>
    <%= form.submit club.persisted? ? "Atualizar Clube" : "Criar Clube", class: "bg-[#8B2635] hover:bg-[#731F2D] text-white font-medium py-2 px-4 rounded-md transition duration-200" %>
  </div>
<% end %> 