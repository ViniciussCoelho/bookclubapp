<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="text-4xl font-bold merriweather-black mb-4">
    Bem vindo de volta, <%= current_user.first_name %>!
  </div>
  <div class="text-gray-700 merriweather-light mb-8">
    Aqui estão os clubes que você está participando:
  </div>

  <hr class="border-gray-300 mb-8">


  <div class="text-2xl font-bold merriweather-black mb-4">
    Seu progresso de leitura
  </div>
  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    
  </div>

  <div class="text-2xl font-bold merriweather-black mb-4">
    Seus clubes favoritos
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @clubs.each do |club| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
        <h3 class="text-xl font-bold merriweather-bold mb-2"><%= club.name %></h3>
        <p class="text-gray-600 merriweather-light mb-4"><%= club.description %></p>
        <p class="text-sm text-gray-500 merriweather-light">Criado por: <%= club.owner.first_name %> <%= club.owner.last_name %></p>
        <div class="mt-4">
          <%= link_to "Ver detalhes", club_path(club), class: "text-[#8B2635] hover:underline" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 