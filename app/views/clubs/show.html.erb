<div class="max-w-6xl mx-auto mb-6">
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
    <div class="bg-[#8B2635] px-6 py-4">
      <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-white"><%= @club.name %></h1>
        
        <div class="flex space-x-2">
          <% admin = @club.club_users.find_by(user: current_user)&.is_admin %>
          <% if admin %>
            <%= link_to edit_club_path(@club), class: "bg-[#F9EDEF] hover:bg-white text-[#8B2635] font-medium py-1 px-3 rounded-md inline-flex items-center transition duration-200" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
              </svg>
              Editar
            <% end %>
          <% end %>
          <%= link_to clubs_path, class: "bg-white hover:bg-gray-100 text-[#8B2635] font-medium py-1 px-3 rounded-md inline-flex items-center transition duration-200" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
            </svg>
            Voltar
          <% end %>
        </div>
      </div>
    </div>
    <div class="p-6">
      <div class="mb-6">
        <h2 class="text-xl font-semibold mb-2 text-[#8B2635]">Sobre o Clube</h2>
        <p class="text-gray-700"><%= @club.description %></p>
      </div>
      <div>
        <h2 class="text-xl font-semibold mb-2 text-[#8B2635]">Membros</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          <% @club.club_users.includes(:user).each do |club_user| %>
            <div class="flex items-center p-3 border rounded-lg">
              <div class="bg-[#F9EDEF] text-[#8B2635] rounded-full w-10 h-10 flex items-center justify-center font-bold mr-3">
                <%= club_user.user.email[0].upcase %>
              </div>
              <div>
                <div class="text-sm font-medium"><%= club_user.user.email %></div>
                <% if club_user.is_admin %>
                  <span class="bg-[#F9EDEF] text-[#8B2635] text-xs px-2 py-0.5 rounded">Admin</span>
                <% else %>
                  <span class="bg-gray-100 text-gray-800 text-xs px-2 py-0.5 rounded">Membro</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="bg-[#F9EDEF] px-6 py-4 border-b">
      <h2 class="text-xl font-semibold text-[#8B2635]">Chat do Clube</h2>
    </div>
    <div class="p-4 h-96 overflow-y-auto" 
         data-controller="club-chat" 
         data-channel="ClubChatTurboChannel"
         data-club-id="<%= @club.id %>">
      <div id="messages">
        <%= render partial: "clubs/messages", locals: { messages: @messages, current_user: current_user } %>
      </div>
    </div>
    <div class="border-t p-4">
      <%= form_with(url: club_messages_path(@club), class: "flex") do |f| %>
        <%= f.text_field :message, 
            placeholder: "Digite sua mensagem...",
            class: "flex-grow px-4 py-2 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-[#8B2635]",
            data: { controller: "reset-form" } %>
        <%= f.submit "Enviar",
            class: "bg-[#8B2635] hover:bg-[#731F2D] text-white font-medium px-6 py-2 rounded-r-md transition duration-200" %>
      <% end %>
    </div>
  </div>
</div>

<%= turbo_stream_from @club, "messages" %>
