<div class="min-h-screen bg-[#F2E9CE] py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center gap-2 text-[#8B2635] mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-8 w-8">
            <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path>
          </svg>
          <span class="text-2xl merriweather-black font-bold">Book Club App</span>
        </a>
        <h1 class="text-3xl font-bold merriweather-black text-gray-900 mb-2">Entrar</h1>
        <p class="text-gray-600 merriweather-light">Bem-vindo de volta! Acesse sua conta</p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-6">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2 merriweather-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8B2635]/20 focus:border-[#8B2635] transition-colors" %>
          </div>

          <div class="mb-6">
            <div class="flex items-center justify-between mb-2">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700 merriweather-bold" %>
              <% if devise_mapping.recoverable? %>
                <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "text-xs text-[#8B2635] hover:underline merriweather-light" %>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8B2635]/20 focus:border-[#8B2635] transition-colors" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-6 flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-[#8B2635] focus:ring-[#8B2635] border-gray-300 rounded mr-2" %>
              <%= f.label :remember_me, "Lembrar de mim", class: "text-sm text-gray-700 merriweather-light" %>
            </div>
          <% end %>

          <div class="mb-6">
            <%= f.submit "Entrar", class: "w-full bg-[#8B2635] text-white font-bold py-3 px-6 rounded-lg transition duration-200 hover:bg-[#731F2D] merriweather-bold" %>
          </div>
        <% end %>
      </div>

      <div class="bg-white/50 rounded-xl p-6 text-center">
        <p class="text-gray-700 mb-2 merriweather-light">Não possui uma conta?</p>
        <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "text-[#8B2635] font-medium hover:underline merriweather-bold" %>
      </div>

      <div class="mt-8 text-center">
        <a href="/" class="text-gray-600 inline-flex items-center hover:text-[#8B2635] transition-colors merriweather-light">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
            <path d="m15 18-6-6 6-6"></path>
          </svg>
          Voltar para a página inicial
        </a>
      </div>
    </div>
  </div>
</div>
